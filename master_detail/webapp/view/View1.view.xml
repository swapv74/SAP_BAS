<mvc:View
    controllerName="masterdetail.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page id="page">
        <customHeader>
            <OverflowToolbar>
                <content>
                    <ToolbarSpacer />
                    <Title text="Order Summary Master Detail" />
                    <ToolbarSpacer />
                </content>
            </OverflowToolbar>
        </customHeader>
        <content />

        <SplitContainer initialMaster="master" initialDetail="orderDetails">
            <masterPages>
                <Page
                    id="master"
                    title="order master"
                >
                    <List
                        id="OrderList"
                        items="{/Orders}"
                        itemPress="onListPress"
                    >
                        <items>
                            <StandardListItem
                                id="OrderId"
                                title="{OrderID}"
                                type="Navigation"
                            />
                        </items>
                    </List>
                </Page>
            </masterPages>
            <detailPages>
            <Page id="orderDetails" title="Order Details">
            <Table id="orderTable" items="{/Order_Details}">
            <columns>
            <Column >
            <Text text="OrderID"/>
            </Column>
            <Column >
            <Text text="Product ID"/>
            </Column>
            <Column >
            <Text text="UnitPrice"/>
            </Column>
            <Column >
            <Text text="Quantity"/>
            </Column>
            <Column >
            <Text text="Discount"/>
            </Column>
            </columns>
            <items>
            <ColumnListItem >
            <cells>
    <Text text="{OrderID}" />
    <Text text="{ProductID}" />
    <Text text="{UnitPrice}" />
    <Text text="{Quantity}" />
    <Text text="{Discount}" />
            </cells>
            </ColumnListItem>
            </items>
            </Table>
            </Page>
            </detailPages>
        </SplitContainer>
    </Page>
</mvc:View>
